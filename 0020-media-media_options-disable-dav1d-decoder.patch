-  }
-  if (is_mac || is_ios) {
-    dav1d_copts += [ "-D_DARWIN_C_SOURCE" ]
-  }
-  if (is_linux || is_chromeos || is_android || current_os == "aix") {
-    if (!is_clang) {
-      dav1d_copts += [ "-D_GNU_SOURCE" ]
-    }
-  }
-}
-
-if (enable_nasm) {
-  nasm_assemble("dav1d_asm") {
-    sources = x86_asm_sources
-
-    inputs = [
-      "libdav1d/src/ext/x86/x86inc.asm",
