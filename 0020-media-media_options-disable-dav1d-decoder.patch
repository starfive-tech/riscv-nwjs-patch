-    ]
-
-    include_dirs = [
-      "libdav1d/src/",
-      platform_config_root,
-    ]
-
-    nasm_flags = [
-      "-P",
-      rebase_path("$platform_config_root/config.asm", root_build_dir),
-    ]
-
-    defines = []
-    if (needs_stack_alignment) {
-      defines += [ "STACK_ALIGNMENT=$stack_alignment" ]
-    }
-
-    # Necessary to ensure macOS symbols end up with a _ prefix.
-    if (is_mac || is_ios) {
-      defines += [ "PREFIX" ]
-    }
-  }
-}
-
